func _ready():
	set_process(true)

func _process(delta):
	time_unit += time_speed * delta

	if (time_seconds > 59):
		time_minutes += 1
		time_seconds = 0
		time_unit = 0
	else:
		time_seconds = time_unit

	if (time_minutes > 59):
		time_hours += 1
		time_minutes = 0

	if (time_hours > 24):
		time_days += 1
		time_hours = 0



