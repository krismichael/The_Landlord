extends CanvasLayer

#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

onready var g_state = $"/root/gx"

var menu_quit = true


#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

func _process(delta):
	if (g_state.state_game_end):
		$"report".show()

	if (Input.is_action_just_pressed("quit")):
		if (menu_quit):
			menu_quit = false
			$"game".hide()
		else:
			menu_quit = true
			$"game".show()


